<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_four__classification_quiz_four"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hannah.machinelearn.Four_ClassificationQuizFour"
    android:gravity= "center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/countLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "4) Match the pose to its pose category"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/quizImage"
        android:layout_width="130dp"
        android:layout_height="220dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/qfour"/>

    <Button
        android:id="@+id/answerBtn1"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="Reach up high"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/answerBtn2"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="Crouch"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="115dp"/>

    <Button
        android:id="@+id/answerBtn3"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="Lie down"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="210dp"/>

    <Button
        android:id="@+id/next"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:text="Next"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="115dp"
        android:onClick="nextQuestion"/>

</RelativeLayout>
