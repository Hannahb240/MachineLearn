<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tree"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hannah.machinelearn.Tree">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What action would you do to pick the fruit? Take a picture!"
        android:textSize="22sp"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/myImgView"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_above="@+id/takePhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What does the computer think your pose is? Tap result below!"
        android:textSize="22sp"
        android:layout_above="@+id/takePhoto"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/seeResult"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:text="Result"
        android:onClick="changeActivity"
        android:layout_marginStart="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/takePhoto"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:text="Take photo"
        android:onClick="returrn"
        android:layout_marginStart="17dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/seeResult" />


</RelativeLayout>
