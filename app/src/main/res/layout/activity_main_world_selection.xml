<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_world_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hannah.machinelearn.Main_WorldSelection"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a minigame"
        android:textSize="22sp"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/goToWorld1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="World one"
        android:layout_marginTop="80dp"
        android:onClick="changeToWorld"/>

    <Button
        android:id="@+id/goToWorld2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="World two"
        android:layout_marginTop="10dp"
        android:onClick="changeToWorld"/>

    <Button
        android:id="@+id/goToWorld3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="World three"
        android:layout_marginTop="10dp"
        android:onClick="changeToWorld"/>

    <Button
        android:id="@+id/classificationQuiz"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Classification quiz"
        android:layout_marginTop="10dp"
        android:onClick="changeToWorld"/>

    <Button
        android:id="@+id/guessThePose"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Guess the pose"
        android:layout_marginTop="10dp"
        android:onClick="changeToWorld"/>

</LinearLayout>
