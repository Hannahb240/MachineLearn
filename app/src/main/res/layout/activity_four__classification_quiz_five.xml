<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_four__classification_quiz_five"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hannah.machinelearn.Four_ClassificationQuizFive"
    android:gravity= "center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/countLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Q5"
        android:textSize="22sp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/quizImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:scaleType="center"/>

    <ImageView
        android:id="@+id/answer1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="110dp"/>

    <ImageView
        android:id="@+id/answer2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="-90dp"/>

    <ImageView
        android:id="@+id/answer3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="-90dp"/>

    <Button
        android:id="@+id/answerBtn1"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="answer1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="110dp"/>

    <Button
        android:id="@+id/answerBtn2"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="answer2"
        android:layout_marginTop="-60dp"/>

    <Button
        android:id="@+id/answerBtn3"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="answer3"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="110dp"/>

    <Button
        android:id="@+id/next"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Finish"
        android:layout_marginTop="10dp"
        android:onClick="returnToHome"/>


</LinearLayout>
